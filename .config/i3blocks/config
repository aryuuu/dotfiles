# wireless
[wifi]
command=nmcli | awk '/^wlp3s0/ {print " ", $4, " "}'
interval=1
background="#d3e7f2"
color="#484639"
separator=false
separator_block_width=0

# ethernet
[ethernet]
command=nmcli | awk '/enp2s0/ {print "   ", $2, " "}'
interval=1
background="#d3e7f2"
color="#484639"
separator=false
separator_block_width=0

