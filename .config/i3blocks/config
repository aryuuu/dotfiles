# disk usage
[root_usage]
command=df -h | grep "/dev/sda3" | awk '{ print "     /  ", $5, $4, " " }'
interval=30
background="#F5F5F5"
color="#484639"
separator=false
separator_block_width=0


[home_usage]
command=df -h | grep "/dev/sda4" | awk '{ print " /home  ", $5, $4, " "}'
interval=30
background="#F5F5F5"
color="#484639"
separator=false
separator_block_width=0

[edge_2]
