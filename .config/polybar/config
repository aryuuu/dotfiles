[module/i3]
	type = internal/i3
	
	pin-workspaces = true
	strip-wsnumbers = true
	format-spacing = 0
	index-sort = true
	
	ws-icon-0 = 1:terminals;
	ws-icon-1 = 2:misc;
	ws-icon-2 = 3:telegram;
	ws-icon-3 = 4:code;
	ws-icon-4 = 5:mail;
	ws-icon-5 = 6:music;
	ws-icon-6 = 7:studio;
	ws-icon-7 = 8:media;
	ws-icon-8 = 9:discord;
	ws-icon-9 = 10:browser;
	;ws-icon-default = A

	format = <label-state> <label-mode>

	label-mode = %mode%

	label-focused = %name%
	label-focused-padding = 2
	label-focused-margin = 1
	label-focused-font = 14
	label-focused-foreground = "#484639"
	label-focused-background = "#F5F5F5"

	label-unfocused = %name%
	label-unfocused-padding = 0
	label-unfocused-margin = 1

	label-visible = %name%
	label-visible-foreground = #FFFFFF
	label-visible-background = #555555
	label-visible-padding = 1
	label-visible-margin = 1

	label-urgent = %name%
	label-urgent-foreground = #484639
	label-urgent-background = #FF0000
	label-urgent-padding = 1


[module/date]
	type = internal/date
