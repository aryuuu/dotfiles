#!/usr/bin/env bash

term_cmd=${TERM_CMD:-urxvt -e}
ssh_cmd=${SSH_CMD:-ssh -t}
ssh_config=${SSH_CONFIG_FILE:-$HOME/.ssh/config}
remote_cmd=${REMOTE_CMD}

ssh_hosts=( $(grep "^Host\s\+[^*]" $ssh_config | cut -d " " -f 2-) )
ssh_host=$(printf '%s\n' "${ssh_hosts[@]}" | dmenu -c -i -fn "FontAwesome" -p ï„  -l 5 -sb '#6272A4' -sf '#F8F8F2' -nb '#282A36' -nf '#F8F8F2' -shb '#6272A4' -shf '#FA485D' -nhb '#282A36' -nhf '#FA485D' "$@")

if [ -n "$ssh_host" ]; then
  ssh $ssh_host hash mosh-server 2> /dev/null
  if [ $? -eq 0 ]; then
    ssh_cmd="mosh"
  fi
  $term_cmd $ssh_cmd $ssh_host $remote_cmd
fi
